@model ASP_NET.Models.Home.Product

<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="/imgs/prod.png" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">Ваш лучший выбор - @Model.Name . Всего за @Model.Price грн.</p>
        <a href="#" class="btn btn-primary">Купить</a>
    </div>
</div>