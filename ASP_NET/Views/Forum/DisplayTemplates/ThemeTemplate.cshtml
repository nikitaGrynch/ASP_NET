@using System.Runtime.InteropServices.JavaScript
@using System.Net.Mime
@model ASP_NET.Models.Forum.ForumThemeModel
@{
    DateTime dateTimeNow = DateTime.Now;
    String createdDtStr = "";
    if (Model.CreatedDt.Date == dateTimeNow.Date)
    {
        createdDtStr = "Today";
    }
    else
    {
        createdDtStr = (dateTimeNow.Date - Model.CreatedDt).Days.ToString() + "day(s) ago";
    }
}
<div class="container-fluid mt-100">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-5">
                <div class="card-header">
                    <div class="media d-flex align-items-center">
                        <img src="@Model.AuthorAvatar" class="d-block ui-w-40 rounded-circle mx-2" alt="">
                        <div class="media-body mx-2">
                            <a href="javascript:void(0)" data-abc="true">@Model.AuthorName</a>
                            <div class="text-muted small">
                                @createdDtStr
                            </div>
                        </div>
                        <div class="text-muted small mx-2 ms-auto ">
                            <div>Member since <strong>@Model.AuthorRegisterDtString</strong></div>
                            <div><strong>134</strong> posts</div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h5>@Model.Title</h5>
                    <p>
                        @Model.Description
                    </p>
                </div>
                <div class="card-footer d-flex flex-wrap justify-content-between align-items-center p-1">
                    <div class="px-4"> <a href="javascript:void(0)" class="text-muted d-inline-flex align-items-center align-middle" data-abc="true"> <i class="fa fa-heart text-danger"></i>&nbsp; <span class="align-middle">445</span> </a> <span class="text-muted d-inline-flex align-items-center align-middle ml-4"> <i class="fa fa-eye text-muted fsize-3"></i>&nbsp; <span class="align-middle">14532</span> </span> </div>
                    <div class="px-4"> <a asp-action="Themes" asp-route-id="@Model.UrlIdString" class="btn btn-primary"><i class="bi bi-arrow-right-square"></i>&nbsp; See</a> </div>
                </div>
            </div>
        </div>
    </div>
</div>